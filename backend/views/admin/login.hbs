<div style="width: 500px; padding-left:10px">
  <form action="/admin/login" method="post">
    <div class="col-auto">
      <label for="exampleInputEmail1" class="col-form-label">Usuario</label>
      <input name="user" class="form-control" id="exampleInputEmail1">
    </div>
    <div class="col-auto">
      <label for="exampleInputPassword1" class="col-form-label">Contraseña</label>
      <input name="password" type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="col-auto" style="padding-top: 10px;">
      <button type="submit" class="btn btn-success">Ingresar</button>
    </div>
  </form>
</div>

{{#if error}}
<p>Usuario y/o contraseña incorrectos</p>
{{/if}}